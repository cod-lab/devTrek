<div class="form-group">
    <label for="name">Username</label>
    <span id="name-err"><strong>*</strong>invalid or smaller username</span>
    <input value="<%= article.username %>" type="text" name="username" id="name" class="form-control" autocomplete="off">
</div>

<div class="form-group">
    <label for="title">Title</label>
    <span id="title-err"><strong>*</strong>invalid or smaller title</span>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control" autocomplete="off">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <span id="desc-err"><strong>*</strong>invalid or smaller description</span>
    <textarea required name="originalDesc" id="description" class="form-control"><%= article.originalDesc %></textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <span id="md-err"><strong>*</strong>invalid or smaller markdown</span>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<div class="form-btns">
    <a href="<%= srcPg ? '/articles/'+article._id : '/' %>" class="btn btn-secondary" onclick="mouseClickCancel('<%= activeLikeBtns %>','<%= article._id %>','<%= srcPg %>')">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>

